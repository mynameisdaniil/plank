{deps, [
  {lager, ".*", {git, "git://github.com/basho/lager.git", {tag, "2.0.3"}}},
  {yamerl, ".*", {git, "git://github.com/yakaz/yamerl.git", {tag, "v0.3.1-1"}}},
  {elli, ".*", {git, "git://github.com/knutin/elli.git", {tag, "v0.1.3"}}},
  {poolboy, ".*", {git, "git://github.com/devinus/poolboy.git", {tag, "1.3.0"}}},
  {sighandler, ".*", {git, "git://github.com/jkingsbery/sighandler.git", {tag, "0.2"}}},
  {sync, ".*", {git, "git://github.com/rustyio/sync.git"}}
